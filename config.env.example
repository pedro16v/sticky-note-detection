# API Keys for LLM transcription (optional)
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (for local LLM transcription)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llava

# Detection Parameters
DEBUG_MODE=false
MIN_CONFIDENCE=40
OVERLAP_THRESHOLD=0.3
SIZE_RATIO_THRESHOLD=0.1

# Color Detection Ranges (HSV format: hue,saturation,value)
# Yellow
YELLOW_LOWER=22,100,120
YELLOW_UPPER=30,255,255
LIGHT_YELLOW_LOWER=20,30,150
LIGHT_YELLOW_UPPER=30,100,255

# Orange
ORANGE_LOWER=8,120,100
ORANGE_UPPER=18,255,255

# Red (includes pink variants)
RED_LOWER=0,50,50
RED_UPPER=10,255,255
RED_HIGH_LOWER=150,50,50
RED_HIGH_UPPER=180,255,255
LIGHT_RED_LOWER=0,30,120
LIGHT_RED_UPPER=10,140,255
LIGHT_RED_HIGH_LOWER=150,30,120
LIGHT_RED_HIGH_UPPER=180,140,255

# Green
GREEN_LOWER=45,60,50
GREEN_UPPER=75,255,255
LIGHT_GREEN_LOWER=40,30,150
LIGHT_GREEN_UPPER=75,60,255

# Cyan
CYAN_LOWER=80,30,50
CYAN_UPPER=100,255,255

# Blue
BLUE_LOWER=105,100,50
BLUE_UPPER=130,255,255
LIGHT_BLUE_LOWER=100,30,150
LIGHT_BLUE_UPPER=130,100,255

# Purple
PURPLE_LOWER=130,50,50
PURPLE_UPPER=150,255,255

# Shape Validation Parameters
MIN_AREA_RATIO=0.00002
MAX_AREA_RATIO=0.25
MIN_ASPECT_RATIO=0.2
MAX_ASPECT_RATIO=5.0
MIN_EXTENT=0.3
MIN_VERTICES=3
MAX_VERTICES=20
MIN_DIMENSION=20

# Size Filtering
ABSOLUTE_MIN_AREA_RATIO=0.001

# Tesseract Path (optional, leave empty for auto-detection)
TESSERACT_PATH= 